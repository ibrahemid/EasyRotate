<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:fitsSystemWindows="true"

                                             tools:context=".MainActivity">
    <view
            android:id="@+id/viewBackground1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:background="@color/blueDark"
            class="android.support.v7.widget.AppCompatTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewBackground2"
            app:layout_constraintBottom_toTopOf="@+id/viewBackground4" />
    <view
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/viewBackground2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/greenDark"
            class="android.support.v7.widget.AppCompatTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/viewBackground1"
            app:layout_constraintBottom_toTopOf="@+id/viewBackground3" />
    <view
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/viewBackground3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/pinkDark"
            class="android.support.v7.widget.AppCompatTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewBackground2"
            app:layout_constraintEnd_toStartOf="@+id/viewBackground4" />
    <view
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/viewBackground4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/YellowDark"
            class="android.support.v7.widget.AppCompatTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewBackground1"
            app:layout_constraintStart_toEndOf="@+id/viewBackground3"
            app:layout_constraintBottom_toBottomOf="parent" />
    <view
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/landScapeR"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@color/yellowLight"
            class="android.support.v7.widget.AppCompatTextView"
            app:layout_constraintTop_toTopOf="@+id/viewBackground4"
            app:layout_constraintStart_toStartOf="@+id/viewBackground4" />
    <view
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/portViewR"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@color/pinkLight"
            class="android.support.v7.widget.AppCompatTextView"
            app:layout_constraintEnd_toStartOf="@+id/viewBackground4"
            app:layout_constraintTop_toTopOf="@+id/viewBackground3" />
    <view
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/portView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@color/greenLight"
            class="android.support.v7.widget.AppCompatTextView"
            app:layout_constraintEnd_toEndOf="@+id/viewBackground2"
            app:layout_constraintBottom_toTopOf="@+id/viewBackground3" />
    <view
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/landScape"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@color/blueLight"
            class="android.support.v7.widget.AppCompatTextView"
            app:layout_constraintBottom_toTopOf="@+id/viewBackground4"
            app:layout_constraintStart_toEndOf="@+id/viewBackground2" />
    <ImageView
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:id="@+id/imageView"
            android:layout_marginTop="28dp"
            android:src="@drawable/photo"
            app:layout_constraintTop_toTopOf="@+id/portView"
            app:layout_constraintStart_toStartOf="@+id/portView"
            app:layout_constraintEnd_toEndOf="@+id/portView" />
    <TextView
            android:text="@string/portrait_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:fontFamily="@font/gibson_semi_bold"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            android:textAlignment="center" />
    <ImageView
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:id="@+id/imageView1"
            android:layout_marginTop="28dp"
            android:rotation="90"
            android:src="@drawable/photo"
            app:layout_constraintTop_toTopOf="@+id/landScape"
            app:layout_constraintStart_toStartOf="@+id/landScape"
            app:layout_constraintEnd_toEndOf="@+id/landScape" />
    <TextView
            android:text="@string/landscape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:fontFamily="@font/gibson_semi_bold"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/imageView1"
            app:layout_constraintEnd_toEndOf="@+id/imageView1"
            app:layout_constraintStart_toStartOf="@+id/imageView1" />
    <ImageView
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:id="@+id/imageView2"
            android:src="@drawable/photo"
            android:rotation="180"

            app:layout_constraintTop_toTopOf="@+id/portViewR"
            app:layout_constraintStart_toStartOf="@+id/portViewR"
            app:layout_constraintEnd_toEndOf="@+id/portViewR"
            android:layout_marginTop="28dp" />
    <TextView
            android:text="@string/portrait_r_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:fontFamily="@font/gibson_semi_bold"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2" />
    <ImageView
            android:layout_width="54dp"
            android:layout_height="49dp"
            android:id="@+id/imageView3"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/landScapeR"
            app:layout_constraintStart_toStartOf="@+id/landScapeR"
            app:layout_constraintEnd_toEndOf="@+id/landScapeR"
            android:src="@drawable/photo"
            android:rotation="270"
            tools:layout_editor_absoluteY="354dp"
            tools:layout_editor_absoluteX="242dp" />
    <TextView
            android:text="@string/landscape_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:fontFamily="@font/gibson_semi_bold"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3" />
</android.support.constraint.ConstraintLayout>